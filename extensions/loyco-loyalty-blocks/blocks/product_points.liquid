    {
      "type": "range",
      "id": "text_size",
      "label": "Text Size",
      "min": 12,
      "max": 18,
      "step": 1,
      "default": 14
    },
    {
      "type": "select",
      "id": "font_weight",
      "label": "Font Weight",
      "options": [
        { "value": "400", "label": "Normal" },
        { "value": "500", "label": "Medium" },
        { "value": "600", "label": "Semi Bold" },
        { "value": "700", "label": "Bold" }
      ],
      "default": "500"
    },
    {
      "type": "header",
      "content": "Icon"
    },
    {
      "type": "checkbox",
      "id": "show_icon",
      "label": "Show icon",
      "default": true
    },
    {
      "type": "select",
      "id": "icon_type",
      "label": "Icon Type",
      "options": [
        { "value": "star", "label": "Star ‚òÖ" },
        { "value": "coin", "label": "Coin ü™ô" },
        { "value": "diamond", "label": "Diamond üíé" },
        { "value": "crown", "label": "Crown üëë" }
      ],
      "default": "star"
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Icon Color",
      "default": "#F59E0B"
