      "default": "flex-start"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#F3F4F6"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border Color",
      "default": "#E5E7EB"
    },
    {
      "type": "color",
      "id": "text_color",
