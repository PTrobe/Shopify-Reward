    {
      "type": "text",
      "id": "points_currency",
      "label": "Points Currency Name",
      "default": "points",
      "info": "e.g., points, stars, coins"
    },
    {
      "type": "textarea",
      "id": "custom_message",
      "label": "Custom Message",
      "placeholder": "Earn POINTS_PLACEHOLDER CURRENCY_PLACEHOLDER with this purchase",
